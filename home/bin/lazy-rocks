#!/usr/bin/env bash

echo "üîß Reparare lazy-rocks + hererocks + luarocks..."

# 1. »òterge complet instalarea veche
rm -rf ~/.local/share/nvim/lazy-rocks

# 2. VerificƒÉ Python + pip
if ! command -v python3 >/dev/null; then
    echo "‚ùå Python3 lipseste. Instaleaza-l inainte de a continua."
    exit 1
fi

if ! command -v pip3 >/dev/null; then
    echo "‚ö†Ô∏è Pip lipseste. Incerc instalare automata..."
    python3 -m ensurepip --upgrade || { echo "‚ùå Nu s-a putut instala pip. Instaleaza-l manual."; exit 1; }
fi

# 3. Instaleaza hererocks daca lipseste
if ! command -v hererocks >/dev/null; then
    echo "‚ö†Ô∏è Hererocks lipseste. Instalez cu pip..."
    pip3 install --user hererocks || { echo "‚ùå Eroare la instalarea hererocks."; exit 1; }
    export PATH="$HOME/.local/bin:$PATH"
fi

# 4. Ruleaza hererocks pentru a instala lua + luarocks
echo "‚öôÔ∏è Rulez hererocks pentru configurare..."
hererocks ~/.local/share/nvim/lazy-rocks/hererocks --lua latest --luarocks latest || { echo "‚ùå Eroare la rularea hererocks."; exit 1; }

# 5. Verifica daca luarocks exista acum
if [ -f ~/.local/share/nvim/lazy-rocks/hererocks/bin/luarocks ]; then
    echo "‚úÖ Instalare completa. luarocks a fost instalat corect:"
    echo "   ~/.local/share/nvim/lazy-rocks/hererocks/bin/luarocks"
else
    echo "‚ùå luarocks nu a fost instalat corect. Verifica logurile de mai sus."
    exit 1
fi

echo "‚ÑπÔ∏è Deschide acum Neovim. lazy-rocks va putea folosi luarocks normal."

