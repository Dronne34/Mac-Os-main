#!/usr/bin/env bash
clear
# Array cu fiÈ™iere (cale completÄƒ)
files=(
  "$HOME/.config/alacritty/alacritty.toml"
  "$HOME/.config/kitty/kitty.conf"
  "$HOME/.config/nvim/init.lua"
  "$HOME/.config/mpv/mpv.conf"
  "$HOME/.aerospace.toml"
  "$HOME/.bash_alias"
  "$HOME/.bashrc"
  "$HOME/.zshrc"
)

while true; do
  # Construim lista cu icon + nume fiÈ™ier simplu (basename)
  list=()
  for f in "${files[@]}"; do
    base=$(basename "$f")
    list+=("ðŸ“„ $base")
  done

  # Selectie fzf cu centru vertical È™i border rounded
  selection=$(printf '%s\n' "${list[@]}" | fzf \
    --prompt="SelecteazÄƒ config: " \
    --height=40% \
    --layout=reverse \
    --border=rounded \
    --info=hidden)

  # Daca ESC sau nimic selectat, iesim
  if [[ -z "$selection" ]]; then
    echo "IeÈ™ire."
    break
  fi

  # Extragem basename fÄƒrÄƒ iconiÈ›Äƒ (scÄƒpÄƒm de primele 2 caractere: emoji + spaÈ›iu)
  file_name="${selection:2}"

  # CÄƒutÄƒm calea completÄƒ Ã®n array pentru basename
  file_path=""
  for f in "${files[@]}"; do
    if [[ $(basename "$f") == "$file_name" ]]; then
      file_path="$f"
      break
    fi
  done

  # Deschidem Ã®n nvim
  nvim "$file_path"
done
