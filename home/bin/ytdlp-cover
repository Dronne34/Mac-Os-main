#!/bin/bash

# Set folder de ie»ôire
OUTPUT_DIR="$HOME/muzica_2pac"
mkdir -p "$OUTPUT_DIR"

# Fi»ôier cu lista
LISTA="lista.txt"

# Op»õiuni yt-dlp
YT_DLP_OPTS=(
    --extract-audio
    --audio-format mp3
    --embed-thumbnail
    --prefer-ffmpeg
    --output "$OUTPUT_DIR/%(title)s.%(ext)s"
)

# Citim linie cu linie
while IFS= read -r line || [ -n "$line" ]; do
    # CurƒÉ»õƒÉm extensia »ôi caracterele √Æn plus
    TITLU=$(basename "$line" .mp3)

    echo "üîç Caut: $TITLU"
    yt-dlp "${YT_DLP_OPTS[@]}" "ytsearch1:$TITLU"
done <"$LISTA"
