# ==== Opacity ====
background_opacity 0.90
dynamic_background_opacity yes
enable_animations no
#Font-related settings
font_size        15
# Rounded corners
macos_window_corner_radius 12
# ==== Cursor ====
cursor_blink_interval 5
cursor_shape     beam
# single_instance yes
input_delay 0
repaint_delay 2
sync_to_monitor no
wayland_enable_ime no
# ==== Other Preferences ====
enable_audio_bell no
window_padding_width 20

# Allow ligatures if your font supports them
# allow_ligatures yes

# Scrollback
scrollback_lines 5000

# tab_bar_style hidden

# tab_bar_enabled no


# BEGIN_KITTY_THEME
# One Dark
# include current-theme.conf
include Nord.conf
#
#END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

window_border_width 0.5pt
# draw_minimal_borders yes
# active_border_color #00daff
# inactive_border_color #ffffff
hide_window_decorations yes
tab_bar_edge bottom
allow_hyperlinks yes
# macos_titlebar_color system
# macos_titlebar_color background
macos_window_resizable yes
macos_menubar_title_max_length 10
# titlebar-only yes
window_margin_width 6
enabled_layouts tall,stack
# layout tall
# launch --location=hsplit
allow_remote_control yes
confirm_os_window_close 0

map alt+right resize_window wider 5
map alt+left resize_window narrower 5
map alt+up resize_window taller 5
map alt+down resize_window shorter 5
map alt+r resize_window reset

focus_follows_mouse yes
cursor_shape beam

map ctrl+alt+left move_window left
map ctrl+alt+right move_window right
map ctrl+alt+up move_window top
map ctrl+alt+down move_window bottom


map shift+alt+left neighboring_window left
map shift+alt+right neighboring_window right
map shift+alt+up neighboring_window top
map shift+alt+down neighboring_window bottom

map alt+1 launch --allow-remote ~/.local/bin/kitty-control tran 0.9
map alt+2 launch --allow-remote ~/.local/bin/kitty-control tran 0.8
map alt+3 launch --allow-remote ~/.local/bin/kitty-control tran 0.7
map alt+4 launch --allow-remote ~/.local/bin/kitty-control tran 0.6
map alt+5 launch --allow-remote ~/.local/bin/kitty-control tran 0.5

map ctrl+3 launch --type=window --location=hsplit --cwd=current --bias=20 --title=cover observe.sh
map ctrl+4 launch --type=window --location=hsplit --cwd=current --bias=15 --title=radio radio-fzf
