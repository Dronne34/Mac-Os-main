
# ==== Opacity ====
background_opacity 0.95
dynamic_background_opacity yes

font_size        16 
# Rounded corners
# macos_window_corner_radius 12
# ==== Cursor ====
cursor_blink_interval 5
cursor_shape     beam
# single_instance yes
input_delay 0
repaint_delay 2
sync_to_monitor no
wayland_enable_ime no
# ==== Other Preferences ====
enable_audio_bell no
window_padding_width 20

# Allow ligatures if your font supports them
# allow_ligatures yes

# Scrollback
scrollback_lines 5000

# tab_bar_style hidden

# tab_bar_enabled no


# BEGIN_KITTY_THEME
# Nordfox
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMono Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

window_border_width 0.5pt
# draw_minimal_borders yes
# active_border_color #00daff
# inactive_border_color #ffffff
hide_window_decorations yes
tab_bar_edge bottom
allow_hyperlinks yes
# macos_titlebar_color system
# macos_titlebar_color background
macos_window_resizable yes
macos_menubar_title_max_length 10
# titlebar-only yes
window_margin_width 6
enabled_layouts tall,stack
# layout tall
# launch --location=hsplit
allow_remote_control yes
confirm_os_window_close 0


map alt+left resize_window narrower 3
map alt+right resize_window wider 3
map alt+up resize_window taller 3 
map alt+down resize_window shorter 3
# reset all windows in the tab to default sizes
map alt+r resize_window reset

focus_follows_mouse yes

# map ctrl+2 launch --location=hsplit ncmpcpp   
# map ctrl+2 launch --location=hsplit --bias=70 ncmpcpp   

cursor_shape beam

map ctrl+alt+left move_window left
map ctrl+alt+right move_window right
map ctrl+alt+up move_window top
map ctrl+alt+down move_window bottom


map shift+alt+left neighboring_window left
map shift+alt+right neighboring_window right
map shift+alt+up neighboring_window top
map shift+alt+down neighboring_window bottom

# map ctrl+alt+1 kitten @ set-background-opacity 0.90
# map ctrl+alt+2 kitten @ set-background-opacity 0.95

# map ctrl+shift+1 launch --allow-remote kitty @ set-colors --all background_opacity=1
# map ctrl+shift+2 launch --allow-remote kitty @ set-colors --all background_opacity=0.8
# Complet opac
map ctrl+shift+1 launch --allow-remote kitty @ set-colors --all background_opacity=1

# 80% opac
map ctrl+shift+2 launch --allow-remote kitty @ set-colors --all background_opacity=0.8

# 60% opac
map ctrl+shift+3 launch --allow-remote kitty @ set-colors --all background_opacity=0.6

